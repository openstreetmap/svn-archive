<?xml version="1.0"?>
<templates>
 <widgets>
  <widget id="name_bxl" tag="name" type="constant" >
   <description locale="en" >Name</description>
   <description locale="ar" >الإسم</description>
   <description locale="de" >Name</description>
   <description locale="fr" >Nom</description>
   <description locale="pl" >Nazwa</description>
   <value tag="$[name:fr] - $[name:nl]" />

  </widget>
  <widget tag="name:fr" type="edit" >
   <description locale="en" >Name (french)</description>
   <description locale="de" >Name (franz.)</description>
   <description locale="pl" >Nazwa (francuska)</description>
  </widget>
  <widget tag="name:nl" type="edit" >
   <description locale="en" >Name (dutch)</description>
   <description locale="de" >Name (niederl.)</description>
   <description locale="pl" >Nazwa (belgijska)</description>
  </widget>
 </widgets>
 <template>
  <description locale="en" >Brussels Ways</description>
  <description locale="de" >Brüsseler Wege</description>
  <description locale="pl" >Drogi Brukselskie</description>
  <selector expr="not [name:fr] is _NULL_ and not [name:nl] is _NULL_" />
  <widgetref id="name_bxl" />
  <widgetref id="name:fr" />
  <widgetref id="name:nl" />
  <widgetref id="highway" />
  <widgetref id="landuse" />
  <widgetref id="oneway" />
 </template>
</templates>

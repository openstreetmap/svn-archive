#!/bin/sh

set -e

. /usr/share/debconf/confmodule

db_input medium osm-data-mapnik/initdb || true
db_go

if false ; then
db_get osm-data-mapnik/initdb
INIT_DB=$RET

if [ "x$INIT_DB" = "xtrue" ] ; then
        echo "asking for osm-data-mapnik Options import"
        db_input medium osm-data-mapnik/import_osm
	db_go

	db_get osm-data-mapnik/import_osm
	IMPORT_OSM=$RET
	if [ "x$IMPORT_OSM" = "xtrue" ] ; then
	    db_input medium osm-data-mapnik/import_osm_area
	    db_go
	fi
fi
fi

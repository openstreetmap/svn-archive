	echo "Please add an installation routine here"
	echo "For now this is handled in the upper directory"

dist:
	echo "Please add an installation routine here"
	echo "For now this is handled in the upper directory"

install:
	echo "Please add an installation routine here"
	echo "For now this is handled in the upper directory"

distclean: clean
	echo "Please add an installation routine here"
	echo "For now this is handled in the upper directory"


